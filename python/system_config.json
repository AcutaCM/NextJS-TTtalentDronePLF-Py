{
  "server": {
    "websocket_port": 3005,
    "http_port": 8081,
    "host": "localhost",
    "max_connections": 100,
    "heartbeat_interval": 30,
    "connection_timeout": 60
  },
  "performance": {
    "enable_performance_monitoring": true,
    "enable_adaptive_optimization": true,
    "max_fps": 30,
    "frame_skip_ratio": 0.3,
    "enable_adaptive_quality": true,
    "memory_limit_mb": 1024,
    "cpu_limit_percent": 80,
    "performance_report_interval": 300
  },
  "detection": {
    "maturity_model_path": "strawberry_yolov11.pt",
    "disease_model_path": "best.pt",
    "detection_confidence": 0.5,
    "detection_interval": 0.1,
    "max_frame_skip": 5,
    "track_timeout": 3.0,
    "distance_threshold": 50,
    "enable_tracking": true,
    "enable_nms": true,
    "nms_threshold": 0.4
  },
  "optimization": {
    "enable_frame_buffering": true,
    "buffer_size": 10,
    "enable_compression": true,
    "compression_level": 6,
    "enable_caching": true,
    "cache_size": 100,
    "enable_threading": true,
    "thread_pool_size": 4
  },
  "monitoring": {
    "enable_system_monitoring": true,
    "enable_error_tracking": true,
    "enable_performance_alerts": true,
    "alert_thresholds": {
      "cpu_percent": 85,
      "memory_percent": 90,
      "response_time_ms": 1000,
      "error_rate_percent": 5
    },
    "log_level": "INFO",
    "log_file": "drone_system.log",
    "error_history_limit": 1000
  },
  "protocol": {
    "enable_protocol_upgrade": true,
    "preferred_version": "3.0",
    "supported_versions": ["1.0", "2.0", "2.1", "3.0"],
    "enable_compression": true,
    "compression_types": ["gzip", "lz4"],
    "enable_streaming": true,
    "chunk_size": 8192
  },
  "validation": {
    "enable_interface_validation": true,
    "enable_data_validation": true,
    "validation_level": "strict",
    "enable_auto_discovery": true,
    "component_timeout": 10
  },
  "error_handling": {
    "enable_enhanced_error_handling": true,
    "enable_auto_recovery": true,
    "max_retry_attempts": 3,
    "retry_delay_ms": 1000,
    "enable_error_notifications": true,
    "error_storm_threshold": 10,
    "error_storm_window": 60
  },
  "drone": {
    "connection_timeout": 10,
    "command_timeout": 5,
    "video_bitrate": 2000000,
    "enable_state_logging": true,
    "battery_warning_threshold": 20,
    "enable_emergency_protocols": true
  },
  "development": {
    "enable_debug_mode": false,
    "enable_profiling": false,
    "enable_test_mode": false,
    "mock_drone": false,
    "log_websocket_messages": false
  }
}